<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireBaseLoginActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#1F2B45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:contentDescription="@string/girl_climbing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/climbing" />

        <GridLayout
            android:id="@+id/sign_in_layout"
            android:layout_width="match_parent"
            android:layout_height="306dp"
            android:layout_below="@+id/imageView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/layout_bg"
            android:columnCount="2"
            android:padding="15dp"
            android:rowCount="5">

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="left"
                android:height="50dp"
                android:ems="10"
                android:hint="@string/username"
                android:inputType="textPersonName"
                android:textColor="#FBFBFB"
                android:textColorHint="#FFFFFF" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="272dp"
                android:layout_height="50dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="left"
                android:height="50dp"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0" />

            <Button
                android:id="@+id/signInButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="left"
                android:text="@string/normal_sign_in"
                android:textSize="12sp" />

            <Button
                android:id="@+id/createAccountButton"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="@string/create_account"
                android:textSize="12sp" />

            <Button
                android:id="@+id/showHideButton"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_row="1"
                android:layout_column="1"
                android:text="Show"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

        </GridLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>